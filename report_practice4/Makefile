BUILD_DIR = build
DOCS_DIR = docs

DOC_SOURCE = $(DOCS_DIR)/index.typ
DOC_OUTPUT = $(BUILD_DIR)/index.pdf

.PHONY: all docs clean

all: $(DOC_OUTPUT)

docs: $(DOC_OUTPUT)

$(DOC_OUTPUT): $(DOC_SOURCE)
	@mkdir -p $(BUILD_DIR)
	@echo "üóíÔ∏è –°–±–æ—Ä–∫–∞ –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏–∏"
	@typst compile --root .. $< $@

clean:
	@echo "üî• –û—á–∏—Å—Ç–∫–∞ –ø—Ä–æ–µ–∫—Ç–∞..."
	@rm -rf $(BUILD_DIR)
